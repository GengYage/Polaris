<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.henu.repository.UserInfoRepository">

    <select id="getUserInfoById" resultType="UserInfo">
        select *
        from userInfo
        where uid = #{id};
    </select>

    <update id="updateUserInfo" parameterType="UserInfo">
        update userInfo
        <trim prefix="set" suffixOverrides=",">
            <if test="github!=null">github=#{github},</if>
            <if test="qq!=null">qq=#{qq},</if>
            <if test="csdn!=null">sex=#{csdn},</if>
            <if test="motto!=null">motto=#{motto},</if>t
        </trim>
        where id = #{id}
    </update>

    <update id="updateUserAvatar" parameterType="String">
        update userInfo
        set avatarURL = #{avatarURL}
        where uid = #{uid}
    </update>
</mapper>